{
  "info": {
    "name": "Order Management API",
    "description": "Collection for testing Order Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Order",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"externalId\": \"ORDER-{{$randomInt}}\",\n  \"items\": [\n    {\n      \"productCode\": \"PROD-001\",\n      \"quantity\": 2,\n      \"unitPrice\": 50.00\n    },\n    {\n      \"productCode\": \"PROD-002\",\n      \"quantity\": 1,\n      \"unitPrice\": 30.00\n    }\n  ]\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/v1/orders",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "v1", "orders"]
        }
      }
    },
    {
      "name": "Get Order by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/v1/orders/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "v1", "orders", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "uuid-here"
            }
          ]
        }
      }
    },
    {
      "name": "Get Order by External ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/v1/orders/external/:externalId",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "v1", "orders", "external", ":externalId"],
          "variable": [
            {
              "key": "externalId",
              "value": "ORDER-001"
            }
          ]
        }
      }
    },
    {
      "name": "List All Orders",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/v1/orders?page=0&size=20&sort=createdAt,desc",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "v1", "orders"],
          "query": [
            {
              "key": "page",
              "value": "0"
            },
            {
              "key": "size",
              "value": "20"
            },
            {
              "key": "sort",
              "value": "createdAt,desc"
            }
          ]
        }
      }
    },
    {
      "name": "List Orders by Status",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/v1/orders/status/COMPLETED?page=0&size=20",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "v1", "orders", "status", "COMPLETED"],
          "query": [
            {
              "key": "page",
              "value": "0"
            },
            {
              "key": "size",
              "value": "20"
            }
          ]
        }
      }
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/actuator/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["actuator", "health"]
        }
      }
    },
    {
      "name": "Prometheus Metrics",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/actuator/prometheus",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["actuator", "prometheus"]
        }
      }
    }
  ]
}

